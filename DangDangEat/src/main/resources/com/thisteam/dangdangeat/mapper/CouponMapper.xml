	<!-- 관리자페이지 쿠폰 개수 조회 (ajax)-->
	<select id="selectCouponCount" resultType="int">
	SELECT count(cp_code) 
	FROM coupon_view 
		WHERE cp_status = 1 
			 AND ((cp_current_st = 1 AND cp_target ='event') 
			 OR (cp_target IN('new_member','birth')))
	</select>


	
	
